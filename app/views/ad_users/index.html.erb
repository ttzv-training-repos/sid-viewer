
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <title>AD->SID converter</title>

    </head>
    <body>
        <div class="content">   
            <div class="user-sid"> 
                <div>
                    <label>User -> SID</label><br><br>
                    <textarea rows="8" cols="30" placeholder="Login, imie i nazwisko lub mail - oddzielone enterem" id="input-area-user"></textarea> <!--Tu masz textfielda można enterowac-->
                    <br>
                    <button id="submit-user">Submit</button>
                </div>
                <br>
                <div>
                    <fieldset> <!--masz ty ładna ramke na SIDy-->
                        <legend>&nbsp; SID &nbsp;</legend>
                        <ul id="list-sid"></ul>
                    </fieldset>    
                </div>
            </div>
            <div class="sid-user">
                <div>
                    <label>SID -> User</label><br><br>
                    <textarea rows="8" cols="30" placeholder="SIDy oddzielone enterem" id="input-area-sid"></textarea> <!--Tu masz textfielda można enterowac-->
                    <br>
                    <button id="submit-sid">Submit</button>
                </div>
                <br>
                <div>
                    <fieldset> <!--masz ty ładna ramke na SIDy-->
                        <legend>&nbsp; User &nbsp;</legend>
                        <ul id="list-user"></ul>
                    </fieldset>    
                </div>
            </div>
            <div class="howto">
                <p>Skrypt:</p>
                <div class="script">
                    Array.from(document.querySelectorAll(".data-list-row")).filter(l => !l.textContent.match(/[^S-\d-\d-\d+-\d+-\d+-\d+-\d+]/g)).map(t => t.textContent).join("\n")
                </div>
            </div>
        </div>
    <%= javascript_include_tag 'application','test' %>
    </body>
</html>